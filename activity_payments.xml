<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#162681"
    tools:context=".Payments">

    <TextView
        android:id="@+id/titlePayments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12sp"
        android:layout_marginTop="50sp"
        android:text="@string/payments"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="50sp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="553dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20sp"
        app:columnCount="2"
        app:rowCount="2">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill"
            app:cardBackgroundColor="@color/design_default_color_primary_variant"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp"
            app:cardUseCompatPadding="true"
            app:layout_column="0"
            app:layout_row="0">

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="439dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/baseline_camera_24" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photo doc / proof" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/baseline_attach_money_24" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_debt_cash_transactions" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>


</RelativeLayout>