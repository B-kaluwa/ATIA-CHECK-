<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >

    <LinearLayout
        tools:context=".Online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#162681"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online work"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:padding="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Below are some of the useful websites to learn, evaluate and manage your investments"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/video1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="types of asset: youtube video that explains assets"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:padding="20dp"
            android:background="@drawable/rounded_corners"
            />

        <TextView
            android:id="@+id/the_fool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The motley fool: a good platform to learn investing"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/berg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bloomberg: offers news for various financial areas"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:padding="20dp"
            android:background="@drawable/rounded_corners"
            />

        <TextView
            android:id="@+id/google_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google news: search for any financial terms that need understanding"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/bigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BiggerPockets: calculate value for rental property that you may want to use"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:padding="20dp"
            android:background="@drawable/rounded_corners"
            />

        <TextView
            android:id="@+id/stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock unlock: learn about stock and other financial fields"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Youtube for videos on financial rules for investing"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="20dp"
            android:background="@drawable/rounded_corners"
            />

        <TextView
            android:id="@+id/search_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google: search for any financial help needed"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:padding="20dp"
            />


        <TextView
            android:id="@+id/wiki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wikipedia"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:padding="20dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conclusion"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="9dp"
            android:padding="20dp"
            android:background="@drawable/rounded_corners"
            />


    </LinearLayout>

</ScrollView>